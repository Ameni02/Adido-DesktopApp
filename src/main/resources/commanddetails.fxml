<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="537.0" prefWidth="769.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Commanddetails">
    <children>
        <!-- Background Panel -->
        <Label layoutX="0.0" layoutY="0.0" prefHeight="537.0" prefWidth="769.0" style="-fx-background-color: #E25822;" />

        <!-- Checkout Details Heading -->
        <Text layoutX="267.0" layoutY="65.0" strokeWidth="0.0" text="Checkout Details" underline="true">
            <font>
                <Font size="28.0" />
            </font>
           
        </Text>

        <!-- Address Label and TextField -->
        <Label layoutX="150.0" layoutY="140.0" text="Address">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="tfadresse" layoutX="295.0" layoutY="138.0" />

        <!-- Phone Number Label and TextField -->
        <Label layoutX="150.0" layoutY="200.0" text="Phone Number">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="tfphone" layoutX="295.0" layoutY="198.0" />

        <!-- Additional Information Label and TextArea -->
        <Label layoutX="100.0" layoutY="260.0" text="Additional Information">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextArea fx:id="tfinfo" layoutX="294.0" layoutY="258.0" prefHeight="86.0" prefWidth="250.0" />

        <!-- Back to Cart Button -->
        <Button fx:id="backtocart" layoutX="212.0" layoutY="470.0" mnemonicParsing="false" onAction="#backtocart" prefHeight="26.0" prefWidth="120.0" text="Back to Cart" />

        <!-- Pay Button -->
        <Button layoutX="431.0" layoutY="470.0" mnemonicParsing="false" onAction="#ajoutcommandeController" prefHeight="26.0" prefWidth="120.0" text="Pay" />
      <Button layoutX="315.0" layoutY="401.0" mnemonicParsing="false" onAction="#historique" prefHeight="37.0" prefWidth="139.0" text="My previous Orders" />

    </children>
</AnchorPane>
