<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Affichercart">

    <VBox alignment="CENTER" spacing="20">

        <!-- Shopping Cart Title -->
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Your Shopping Cart" />

        <!-- Shopping cart items -->
        <VBox spacing="10" style="-fx-padding: 20px; -fx-background-color: #ffffff; -fx-border-width: 1px; -fx-border-color: #cccccc; -fx-border-radius: 5px;">
            <!-- Each item in the cart -->
            <VBox fx:id="cartItems" spacing="5">
                <!-- Product details -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <Label fx:id="productNameLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;" />
                    <HBox spacing="10">
                        <Label fx:id="productQuantityLabel" style="-fx-text-fill: #666666;" />
                        <Label fx:id="productPriceLabel" style="-fx-text-fill: #666666;" />
                        <!-- Delete button -->
                        <Button onAction="#removeItemClicked" style="-fx-font-size: 12px; -fx-background-color: #ff6666; -fx-text-fill: white;" text="Remove" />
                    </HBox>

                </HBox>
            </VBox>
        </VBox>

        <!-- Buttons -->
        <HBox spacing="20">
            <!-- Clear All Button -->
            <Button onAction="#clearAllClicked" style="-fx-font-size: 16px; -fx-background-color: #f44336; -fx-text-fill: white;" text="Clear All" />
            <Button onAction="#goBackShoppingClicked" style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="Continue Shopping" />
            <!-- Checkout Button -->
            <Button fx:id="checkoutButton" onAction="#checkoutClicked" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Proceed to Checkout" />
        </HBox>

        <!-- Total and Taxes -->
        <HBox alignment="CENTER_RIGHT" prefHeight="199.0" prefWidth="686.0" spacing="20">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Total: $" />
            <Label fx:id="totalLabel" style="-fx-font-size: 20px; -fx-text-fill: #333333;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-size: 18px; -fx-text-fill: #666666;" text="Shipping: $" />
            <Label fx:id="taxesLabel" style="-fx-font-size: 18px; -fx-text-fill: #666666;" />
        </HBox>

        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS" />

    </VBox>

</AnchorPane>